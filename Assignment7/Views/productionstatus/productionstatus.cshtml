            loadData();

            Object.keys(timers).forEach(stepId => {
                const timer = timers[stepId];
                if (timer && timer.startTime) {
                    const elapsed = Math.floor((Date.now() - timer.startTime) / 1000);
                    if (elapsed < timer.total) {
                        intervals[stepId] = setInterval(() => updateTimer(stepId), 1000);
                    }
                }
            });

            if (!selectedOrderId) {
                document.getElementById('orderStatus').textContent = 'Not Started';
                document.getElementById('currentStep').textContent = 'Order Setup';
            }
        }

        function clearAllData() {
            if (confirm('Are you sure you want to clear all production data? This cannot be undone.')) {
                orderData = {};
                allOrders = [];
                timers = {};
                processStartTime = null;
                selectedOrderId = null;

                Object.values(intervals).forEach(clearInterval);
                intervals = {};

                location.reload();
            }
        }

        function exportData() {
            const data = {
                orderData,
                allOrders,
                timers,
                processStartTime,
                selectedOrderId,
                binStatus: wheatBins,
                exportDate: new Date().toISOString(),
                version: '2.0'
            };

            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);

            const a = document.createElement('a');
            a.href = url;
            a.download = `wheat_processing_${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);

            showNotification('Data exported successfully!');
        }

        function importData(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const data = JSON.parse(e.target.result);

                        if (data.version && data.allOrders) {
                            orderData = data.orderData || {};
                            allOrders = data.allOrders || [];
                            timers = data.timers || {};
                            processStartTime = data.processStartTime;
                            selectedOrderId = data.selectedOrderId;

                            if (data.binStatus) {
                                data.binStatus.forEach((importedBin, index) => {
                                    if (wheatBins[index]) {
                                        wheatBins[index].currentStock = importedBin.currentStock;
                                    }
                                });
                            }

                            showNotification('Data imported successfully! Refreshing page...');
                            setTimeout(() => location.reload(), 2000);
                        } else {
                            showNotification('Invalid or incompatible file format', 'error');
                        }
                    } catch (error) {
                        showNotification('Error reading file: ' + error.message, 'error');
                    }
                };
                reader.readAsText(file);
            }
        }

        // Add control buttons when page loads
        window.addEventListener('load', () => {
            const buttonContainer = document.createElement('div');
            buttonContainer.style.position = 'fixed';
            buttonContainer.style.bottom = '20px';
            buttonContainer.style.right = '20px';
            buttonContainer.style.zIndex = '1000';
            buttonContainer.style.display = 'flex';
            buttonContainer.style.flexDirection = 'column';
            buttonContainer.style.gap = '10px';

            // Reset button
            const resetBtn = document.createElement('button');
            resetBtn.textContent = '🔄 Reset All Data';
            resetBtn.className = 'btn btn-warning';
            resetBtn.onclick = clearAllData;
            buttonContainer.appendChild(resetBtn);

            // Reset bin stock button
            const resetStockBtn = document.createElement('button');
            resetStockBtn.textContent = '📦 Reset Bin Stock';
            resetStockBtn.className = 'btn btn-primary';
            resetStockBtn.onclick = () => {
                if (confirm('Reset all bin stock to original levels?')) {
                    wheatBins[0].currentStock = 23.5;
                    wheatBins[1].currentStock = 24.8;
                    wheatBins[2].currentStock = 22.3;
                    wheatBins[3].currentStock = 25.0;
                    wheatBins[4].currentStock = 61.2;
                    wheatBins[5].currentStock = 64.5;

                    if (selectedOrderId && !document.getElementById('binSelectionSection').classList.contains('hidden')) {
                        initializeBinSelection();
                    }

                    showNotification('Bin stock levels reset to original values');
                }
            };
            buttonContainer.appendChild(resetStockBtn);

            // View bin status button
            const viewBinBtn = document.createElement('button');
            viewBinBtn.textContent = '👁️ View Bin Status';
            viewBinBtn.className = 'btn btn-primary';
            viewBinBtn.onclick = () => {
                let statusMessage = 'Current Bin Status:\n\n';
                wheatBins.forEach(bin => {
                    const utilizationPercent = ((bin.capacity - bin.currentStock) / bin.capacity * 100).toFixed(1);
                    statusMessage += `${bin.name}:\n`;
                    statusMessage += `  Available: ${bin.currentStock}t / ${bin.capacity}t\n`;
                    statusMessage += `  Type: ${bin.type}\n`;
                    statusMessage += `  Moisture: ${bin.moistureLevel}%\n`;
                    statusMessage += `  Utilization: ${utilizationPercent}%\n\n`;
                });

                alert(statusMessage);
            };
            buttonContainer.appendChild(viewBinBtn);

            // Export button
            const exportBtn = document.createElement('button');
            exportBtn.textContent = '📤 Export Data';
            exportBtn.className = 'btn btn-success';
            exportBtn.onclick = exportData;
            buttonContainer.appendChild(exportBtn);

            // Import button
            const importInput = document.createElement('input');
            importInput.type = 'file';
            importInput.accept = '.json';
            importInput.style.display = 'none';
            importInput.onchange = importData;
            buttonContainer.appendChild(importInput);

            const importBtn = document.createElement('button');
            importBtn.textContent = '📥 Import Data';
            importBtn.className = 'btn btn-success';
            importBtn.onclick = () => importInput.click();
            buttonContainer.appendChild(importBtn);

            document.body.appendChild(buttonContainer);

            // Initialize the application
            initializeApp();
        });

        // Save data before page unload
        window.addEventListener('beforeunload', saveData);

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                exportData();
            }

            if (e.key === 'Escape') {
                const notification = document.getElementById('notification');
                notification.classList.remove('show');
            }
        });
    </script>

