        // Enhanced Core Functions
        function showModule(moduleId) {
            document.querySelectorAll('.module').forEach(module => {
                module.style.display = 'none';
            });
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });

            const moduleElement = document.getElementById(moduleId);
            if (moduleElement) {
                moduleElement.style.display = 'block';
            }

            const clickedLink = document.querySelector(`[onclick="showModule('${moduleId}')"]`);
            if (clickedLink) {
                clickedLink.classList.add('active');
            }

            switch(moduleId) {
                case 'dashboard':
                    updateDashboard();
                    updateWorkflowStatus();
                    break;
                case 'vehicles': loadVehicleTable(); break;
                case 'suppliers': loadSupplierTable(); break;
                case 'samples': loadSampleTable(); break;
                case 'tests': loadTestTable(); break;
                case 'confirmations': loadConfirmationTable(); break;
                case 'unloading': loadUnloadingTable(); break;
                case 'inventory': loadInventoryModule(); break;
                case 'claims': loadClaimTable(); break;
                case 'reports': loadReports(); break;
            }
        }

        // Initialize Receipt Upload Functionality
        function initializeReceiptUpload() {
            const receiptInput = document.getElementById('receiptFileInput');
            if (receiptInput) {
                receiptInput.addEventListener('change', handleReceiptUpload);
            }
        }

        function handleReceiptUpload(event) {
            const files = Array.from(event.target.files);
            const previewContainer = document.getElementById('receiptPreview');

            files.forEach(file => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    addReceiptToPreview(e.target.result, file.name, file.type);
                };

                if (file.type.startsWith('image/')) {
                    reader.readAsDataURL(file);
                } else {
                    // For non-image files, just store the file info
                    addReceiptToPreview(null, file.name, file.type);
                }
            });

            showAlert(`${files.length} receipt(s) uploaded successfully`, 'success');
        }

        function addReceiptToPreview(fileData, fileName, fileType) {
            const previewContainer = document.getElementById('receiptPreview');
            if (!previewContainer) return;

            const receiptItem = document.createElement('div');
            receiptItem.className = 'receipt-preview-item d-flex align-items-center';

            let iconClass = 'fas fa-file';
            if (fileType.includes('pdf')) iconClass = 'fas fa-file-pdf text-danger';
            else if (fileType.includes('image')) iconClass = 'fas fa-file-image text-success';
            else if (fileType.includes('word') || fileType.includes('doc')) iconClass = 'fas fa-file-word text-primary';

            receiptItem.innerHTML = `
                <div class="me-3">
                    <i class="${iconClass} fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="mb-1">${fileName}</h6>
                    <small class="text-muted">Supplier Receipt/Invoice</small>
                </div>
                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeReceipt(this)">
                    <i class="fas fa-trash"></i>
                </button>
            `;

            // Store file data for later use
            receiptItem.dataset.fileName = fileName;
            receiptItem.dataset.fileData = fileData || '';
            receiptItem.dataset.fileType = fileType;

            previewContainer.appendChild(receiptItem);
        }

        function removeReceipt(button) {
            if (button && button.parentElement) {
                button.parentElement.remove();
            }
        }

        function getVehicleReceipts() {
            const receiptItems = document.querySelectorAll('.receipt-preview-item');
            return Array.from(receiptItems).map(item => ({
                fileName: item.dataset.fileName,
                fileData: item.dataset.fileData,
                fileType: item.dataset.fileType,
                timestamp: new Date().toISOString()
            }));
        }

        // Enhanced Vehicle Management
        function openVehicleModal(index = null) {
